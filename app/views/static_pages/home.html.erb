<% provide(:title, "Home") %>
<!doctype html>
<html>
<head>
  <title><%= yield(:title) %> | Freight App</title>
</head>
<body>
<div class="center jumbotron">
  <h1>RCG Freight App</h1>

  <h2>
    Welcome to the homepage for the Freight App for <a href="www.rcgauto.com">RCG Auto</a>
  </h2>

  <% if user_signed_in? %>
    <p> Welcome to the home page! </p>
  <% else %>
    <%= link_to "Sign Up As Vendor", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
<div class="center">
  <%= link_to image_tag("rcg_logo_small.png", alt: "RCG Logo"), '/' %>
</div>
</body>
</html>
